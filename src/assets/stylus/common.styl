

/*
    初始化页面布局
*/
html, body {
    width: 100%;
    height: 100%;
    margin: 0;
    position: relative;
    overflow: hidden;
}
#app {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 2;
    margin: auto;
    font-size: 13px;
    background: #fff;
    -webkit-tap-highlight-color: transparent;
}

* {
    outline: none;
}

ul {
    padding: 0;
    margin: 0;
}

li {
    list-style: none;
}

a {
    text-decoration: none;
    color: #80bd01;
}

.common-typeicon {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    height: 80px;
    .icon {
        padding: 20px 5px;
    }
    .iconfont {
        display: block;
        font-size: 34px;
        transform: rotate(35deg);
    }
    .icon-topic-top {
        color: red;
    }
    .icon-topic-good {
        color: green;
    }
}